<div class="card text-bg-dark mb-3" style="max-width: 18rem;">
  <div class="card-body">

  <p>
    <strong>First name:</strong>
    <%= @friend.first_name %>
  </p>
  
  <p>
    <strong>Last name:</strong>
    <%= @friend.last_name %>
  </p>
  
  <p>
    <strong>Email:</strong>
    <%= @friend.email %>
  </p>
  
  <p>
    <strong>Phone:</strong>
    <%= @friend.phone %>
  </p>
  
  <p>
    <strong>Twitter:</strong>
    <%= @friend.twitter %>
  </p>
  
  <%= link_to 'Edit', edit_friend_path(@friend),class:"btn btn-secondary" %> 
  <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
  </div>
</div>







