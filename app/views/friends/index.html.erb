<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>  
      <th>Twitter</th>
      <th>Photo</th> 
      <th>Excel File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= image_tag(friend.photo.url, class: "img-thumbnail") if friend.photo? %></td>
       
      #   <td>
      #   <% if friend.excel_file.attached? %>
      #     <%= render_excel_content(friend.excel_file) %>
      #   <% else %>
      #     <p>No Excel file attached.</p>
      #   <% end %>
      # </td>


      # <%= render partial: 'excel_content', locals: { excel_blob: @excel_blob } %>

        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

