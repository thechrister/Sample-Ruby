<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>  
      <th>Twitter</th> 
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>
        <td><%= link_to  friend.first_name + ' ' + friend.last_name ,friend %></td>   
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>  
        <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-outline-danger" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path , class:"btn btn-secondary" %>
<h1>Upload a File</h1>

<%= form_with(model: @document, local: true, html: { multipart: true }) do |form| %>
  <%= form.file_field :document %>
  <%= form.submit 'Upload' %>
<% end %>




